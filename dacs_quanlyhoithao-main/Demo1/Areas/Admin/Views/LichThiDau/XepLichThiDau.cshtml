
@{
    ViewBag.Title = "Xếp lịch thi đấu";
}
<h2 style="text-align:center">XẾP LỊCH THI ĐẤU</h2>
<hr />
@using (Html.BeginForm())
{
    @model Demo1.Models.CHITIETLICHTHIDAU
    @Html.AntiForgeryToken()
    <h4 style="color: Highlight">
        @ViewData["ThemBangDauThanhCong"]
    </h4>
    <h4 style="color: red">
        @ViewData["CheckDoi"]
        @ViewData["SoLuongDoi"]
        @ViewData["CheckTrungDoi"]
    </h4>
    <div class="form-group">
        <p>
            Ngày thi đấu: @Html.DropDownListFor(model => model.MaLichThiDau, null, new { htmlAttributes = new { @class = "form-control" } })
        </p>
    </div>
    <div class="form-group">
        <p>
            Sân đấu: @Html.DropDownListFor(model => model.MaSanDau, null, new { htmlAttributes = new { @class = "form-control" } })
        </p>
    </div>
    <div class="form-group">
        <p>
            Đội: @Html.DropDownListFor(model => model.MaDoi, null, new { htmlAttributes = new { @class = "form-control" } })
        </p>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
}
<a class="btn btn-success" href="@Url.Action("ChiTietBangDau", "LichThiDau")">Quay lại</a>
<hr />



