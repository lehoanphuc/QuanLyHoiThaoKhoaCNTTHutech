@*@model IEnumerable<Demo1.Models.TRANDAU>*@
@model List<Demo1.Models.CHITIETLICHTHIDAU>

@{
    ViewBag.Title = "Lịch bóng đá";
}

<h2 style="text-align:center">LỊCH THI ĐẤU BÓNG ĐÁ</h2>
<body>
    <div style="margin:-25px;">
        <p>
            <a class="btn btn-success" href="@Url.Action("ChiTietBangDau","LichThiDau")" style=" margin-left: 40px; margin-top:40px">Chi tiết bảng đấu</a>
            <a class="btn btn-primary" href="@Url.Action("BangDau","LichThiDau")" style=" margin-left: 20px; margin-top:40px">Thêm Đội vào bảng đấu</a>
            <a class="btn btn-success" href="@Url.Action("TaoBangDau","LichThiDau")" style=" margin-left: 20px; margin-top: 40px">Thêm bảng đấu</a>
            <a class="btn btn-success" href="@Url.Action("TaoLichThiDau","LichThiDau")" style=" margin-left: 20px; margin-top: 40px">Tạo lịch thi đấu</a>
            <a class="btn btn-success" href="@Url.Action("TaoSanDau","LichThiDau")" style=" margin-left: 20px; margin-top: 40px">Thêm sân thi đấu</a>
            <a class="btn btn-success" href="@Url.Action("XepLichThiDau","LichThiDau")" style=" margin-left: 20px; margin-top: 40px">Xếp lịch thi đấu</a>

        </p>
        <!-- /.box-header -->
        <div class="box-body">
            @foreach (var item in Model)
            {
                <table style="margin-left:10%; margin-bottom:10px; width:50%" id="example1" class="table table-bordered table-hover">

                    <tr style="color:black; text-align:center; margin-bottom:10px">

                        <td>
                            @item.DOI.TenDoi
                        </td>
                        <td>
                            @if (item.MaSanDau == 0)
                            {

                                <p>Sân A</p>

                            }
                            else if (item.MaSanDau == 1)
                            {
                                <p>Sân B</p>
                            }
                            else
                            {
                                <p>Sân C</p>
                            }
                        </td>
                        <td>
                            @item.LICHTHIDAU.NgayThiDau
                        </td>

                        <td>
                            <a class="btn btn-primary" style="font-size: 10px;" href="@Url.Action("Edit", new { id = item.ID })"><i class="fa fa-fw fa-pen"></i></a>
                            <a class="btn btn-danger" style="font-size:10px;" href="@Url.Action("Delete", new { id = item.ID })"><i class="fa fa-fw fa-trash"></i></a>
                        </td>
                    </tr>
                </table>
            }


        </div>
        <!-- /.box-body -->


    </div>
</body>

