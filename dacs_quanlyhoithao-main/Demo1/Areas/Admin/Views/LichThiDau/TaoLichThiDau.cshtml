@model Demo1.Models.LICHTHIDAU
@{
    ViewBag.Title = "Tạo lịch thi đấu";
}
@using (Html.BeginForm())
{
    <h4 style="color: red">
        @ViewData["CheckLich"]
    </h4>
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <input placeholder="Ngày thi đấu" id="NGAYTHIDAU" type="datetime-local" name="NGAYTHIDAU"
                   @Html.EditorFor(model => model.NgayThiDau, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <p>
            Sân đấu: @Html.DropDownListFor(model => model.MaSanDau, null, new { htmlAttributes = new { @class = "form-control" } })
        </p>
    </div>


    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
}
