
@{
    ViewBag.Title = "BangDau";
}

<h3>Thêm đội vào bảng đấu</h3>
@using (Html.BeginForm())
{
    @model Demo1.Models.CHITIETBANGDAU
    @Html.AntiForgeryToken()
    <h4 style="color: Highlight">
        @ViewData["ThemBangDauThanhCong"]
    </h4>
    <h4 style="color: red">
        @ViewData["CheckDoi"]
        @ViewData["SoLuongDoi"]
    </h4>

    <div class="form-group">
        <p>
            Đội: @Html.DropDownListFor(model => model.MaDoi, null, new { htmlAttributes = new { @class = "form-control" } })
        </p>
    </div>
    <div class="form-group">
        <p>
            Bảng đấu: @Html.DropDownListFor(model => model.MaBangDau, null, new { htmlAttributes = new { @class = "form-control" } })
        </p>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
    </div>
}
<a class="btn btn-success" href="@Url.Action("ChiTietBangDau", "LichThiDau")">Quay lại</a>
<hr />

