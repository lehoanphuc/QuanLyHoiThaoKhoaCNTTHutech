@using Demo1.Models

@{
    ViewBag.Title = "Index";
}
@*<link href="~/Content/css1.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />*@
<div>
    <div class="box">
        <h2 style="text-align:center; color: black; margin-top:10px">Quản Lý Tài Khoản</h2>
        <p>
            <a class="btn btn-primary" href="@Url.Action("Register","LoginAdmin")" style=" margin-left: 16px">Thêm tài khoản</a>
        </p>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead style="color:black; text-align:center">
                    <div class="group">
                        @ViewData["CheckMail"]
                    </div>
                    <tr>
                        <th>
                            Quyền
                        </th>
                        <th>
                            Họ Và Tên
                        </th>
                        <th>
                            Tên đăng nhập
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>
                            Số Điện Thoại
                        </th>
                        <th>
                            Gmail
                        </th>
                        <th>
                            Ngày tạo
                        </th>
                        <th>
                            Tác vụ
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="color:black; text-align:center">
                            <td>
                                @item.QUYEN.TENQUYEN
                            </td>
                            <td>
                                @item.HoTen
                            </td>

                            <td>
                                @item.Account
                            </td>
                            <td>
                                @if (item.TrangThai == 1)
                                {
                                    <p>Đang hoạt động</p> }
                                else
                                {
                                    <p>Đã nghỉ</p>}
                            </td>
                            <td>
                                @item.SDT
                            </td>
                            <td>
                                @item.Mail
                            </td>
                            <td>
                                @item.NgayTao
                            </td>
                            <td>
                                <a class="btn btn-primary" style="font-size: 10px;" href="@Url.Action("Edit", new { id = item.Account })"><i class="fa fa-fw fa-pen"></i></a>
                                <a class="btn btn-danger" style="font-size:10px;" href="@Url.Action("Delete", new { id = item.Account })"><i class="fa fa-fw fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>

