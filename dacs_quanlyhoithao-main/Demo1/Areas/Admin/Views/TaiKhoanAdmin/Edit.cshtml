                            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Nhập mật khẩu xác nhận</label>
                        <div class="col-md-10">
                            <input class="form-control" id="MatKhauXacNhan" name="MatKhauXacNhan" />
                        </div>
                        @ViewData["NhapMKXN"]
                        @ViewData["MatKhauGiongNhau"]
                    </div>



                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ email</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <label>Trạng thái làm việc</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Quyền quản trị website</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MAQUYEN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MAQUYEN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input style="align-items:center; margin-bottom: 20px" type="submit" value="Lưu thông tin" class="btn btn-primary" />
                        </div>
                    </div>
                </div>}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
