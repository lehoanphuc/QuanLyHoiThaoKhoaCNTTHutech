﻿@model Demo1.Models.USERADMIN

@{ ViewBag.Title = "Edit";
                Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<h2>Edit</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
