@using Demo1.Models
@{
    ViewBag.Title = "DanhSachDangKy";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="box">
        <h2 style="text-align:center; color: black; margin-top:10px">Danh Đội Sách Đăng Ký</h2>

        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead style="color:black; text-align:center">
                    <tr>
                        <th>
                            Tên Đội
                        </th>
                        <th>
                            Môn Đăng Ký
                        </th>
                        <th>
                            Lớp
                        </th>
                        <th>
                            Số Lượng
                        </th>
                        <th>
                            Ngày Đăng Ký
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                        <th>
                            Tác Vụ
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="color:black; text-align:center">
                            <td>

                                @item.DOI.TenDoi
                            </td>
                            <td>
                                @item.DOI.MONTHIDAU.TenMon                               
                            </td>
                            <td>
                                @item.DOI.USER.LOP.TenLop
                            </td>
                            <td>
                                <p>@item.DOI.SoLuong Thành Viên</p>
                            </td>
                            <td>
                                @item.NgayDangKy
                            </td>
                            <td>
                                @if (item.TrangThai == 0)
                                {
                                    <p>Đang Chờ Duyệt</p>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary" style="font-size:10px;" href="@Url.Action("XacNhanDangKyHoiThao", new { id = item.MaPhieuDK })"><i class="fa fa-fw fa-check"></i></a>
                                <a class="btn btn-danger" style="font-size:10px;" href="@Url.Action("CTDanhSachDangKy", new { id = item.MaPhieuDK })"><i class="fa fa-fw fa-list"></i></a>

                            </td>

                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>


