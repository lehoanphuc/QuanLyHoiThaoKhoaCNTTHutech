@using Demo1.Models
@{
    ViewBag.Title = "ListDieuLe";

}
<div>
    <div class="box">
        <h2 style="text-align:center; color: black; margin-top:10px">Quản Lý Điều Lệ</h2>
        <p>
            <a class="btn btn-primary" href="@Url.Action("TaoDieuLe","QLDieuLe")" style=" margin-left: 16px">Thêm Điều Lệ</a>
        </p>

        <!-- /.box-header -->
        <div class="box-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead style="color:black; text-align:center">
                    <tr>
                        <th>
                            Tên Điều Lệ
                        </th>
                        <th>
                            Tóm Tắt
                        </th>
                        <th>
                            Ngày Tạo
                        </th>
                        <th id="ngaychinhsua">
                            Ngày Chỉnh Sửa
                        </th>
                        <th>
                            Trạng Thái
                        </th>
                        <th>
                            Tác Vụ
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        //if (item.TrangThai == 1)
                        //{
                            <tr style="color:black; text-align:center">
                                <td>
                                    @item.TenDieuLe
                                </td>
                                <td>
                                    @item.TomTat
                                    @*@Html.Raw(HttpUtility.HtmlDecode(item.NoiDung))*@
                                </td>
                                <td>
                                    @item.NgayTao
                                </td>
                                <td>
                                    
                                    @if (item.NgayChinhSua == null)
                                    {
                                        <p>Chưa Chỉnh Sửa</p>
                                    }
                                    else
                                    {
                                        @item.NgayChinhSua
                                    }
                                </td>
                                <td>
                                    @if (item.TrangThai == 1)
                                    {
                                        <p>Đang Hoạt Động</p>
                                    }
                                    else { 
                                        <p>Ẩn</p>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary" style="font-size:10px;" href="@Url.Action("SuaDieuLe", new { id = item.MaDieuLe })"><i class="fa fa-fw fa-pen "></i></a>
                                    @*<a class="btn btn-danger" style="font-size:10px;" href="@Url.Action("DeleteDieuLe", new { id = item.MaDieuLe })"><i class="fa fa-fw fa-trash"></i></a>*@
                                </td>

                            </tr>
                        @*}*@

                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
</div>
