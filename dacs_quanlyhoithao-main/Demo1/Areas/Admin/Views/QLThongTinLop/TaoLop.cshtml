@model Demo1.Models.LOP
@{
    ViewBag.Title = "TaoLop";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center">Tạo Lớp Học</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label style="margin-left:13px">Tên Lớp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLop, new { htmlAttributes = new { @type = "text", @style = "width:600px", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLop, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left:13px">Sỉ Số</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SiSo, new { htmlAttributes = new { @type = "number", @style = "width:600px", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SiSo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label style="margin-left:13px">Trạng Thái</label>
            <div class="col-md-10">
                <select name="TrangThai" id="TrangThai">
                    <option value="1">Sử Dụng</option>
                    <option value="0">Ẩn</option>
                </select>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn btn-primary" href="@Url.Action("DanhSachLop","QLThongTinLop")" style=" margin-left: 16px">Trở Về</a>
            </div>
        </div>
    </div>
}

