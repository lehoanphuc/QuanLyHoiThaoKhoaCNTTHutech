@model Demo1.Models.MONTHIDAU
@{
    ViewBag.Title = "SuaHuongDan";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Hướng Dẫn Đăng Ký Môn</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label style="margin-left:13px">Nội Dung</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.HuongDanDK, new { htmlAttributes = new { @class = "form-control" }, id = "txtNoiDung" })
                @Html.ValidationMessageFor(model => model.HuongDanDK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a class="btn btn-primary" href="@Url.Action("HuongDanDK","QLMonThiDau")" style=" margin-left: 16px">Trở Về</a>
            </div>
        </div>

    </div>
}
@section Scripts {
    <script>
            var editor = CKEDITOR.replace('txtNoiDung', {
                customConfig: '/Areas/Admin/Content/ckeditor/config.js',
            });
    </script>
    }