@model Demo1.Models.PHIEUDANGKY
@{
    ViewBag.Title = "DangKyHoiThao";
    Layout = "~/Views/Shared/_LayoutTeam.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center">Đăng Ký Hội Thao</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label style="margin-left:13px">Chọn Đội Để Đăng Ký</label>
            <div class="col-md-10">
                @Html.DropDownList("MaDoi", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDoi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Đăng Ký" class="btn btn-primary" />
                <a class="btn btn-primary" href="@Url.Action("DanhSachDangKy","QuanLy")" style=" margin-left: 16px">Trở Về</a>
            </div>
        </div>

    </div>
}

